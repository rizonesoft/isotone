# Isotone CMS Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME="Isotone CMS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/isotone
APP_KEY=

# Database Configuration
# For XAMPP/WAMP/MAMP use localhost or 127.0.0.1
# The application auto-detects WSL and adjusts accordingly
# Your IDE should connect using these same settings
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=isotone_db
DB_USERNAME=root
DB_PASSWORD=
# IDE Connection: Use the same values above in PhpStorm, VSCode, DBeaver, etc.

# Cache
CACHE_DRIVER=file

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@isotone.local
MAIL_FROM_NAME="${APP_NAME}"

# Media
MAX_UPLOAD_SIZE=10M
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,zip

# Security
BCRYPT_ROUNDS=10
JWT_SECRET=
RATE_LIMIT=60