{
    "name": "isotone/isotone",
    "description": "A lightweight, modern PHP CMS built for shared hosting",
    "type": "project",
    "license": "MIT",
    "keywords": ["cms", "content-management", "php", "lightweight"],
    "homepage": "https://isotone.tech",
    "authors": [
        {
            "name": "Rizonetech (Pty) Ltd",
            "email": "info@rizonetech.com",
            "homepage": "https://rizonetech.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "gabordemooij/redbean": "^5.7",
        "monolog/monolog": "^3.0",
        "symfony/http-foundation": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/yaml": "^7.0",
        "league/commonmark": "^2.4",
        "intervention/image": "^3.0",
        "nesbot/carbon": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Isotone\\": "iso-core/",
            "Isotone\\Automation\\": "iso-automation/src/"
        },
        "files": [
            "iso-core/helpers.php",
            "iso-core/hooks.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "analyse": "phpstan analyse iso-core --level=6",
        "check-style": "phpcs iso-core --standard=PSR12",
        "fix-style": "phpcbf iso-core --standard=PSR12",
        "docs:hooks": "php iso-automation/cli.php hooks:scan",
        "hooks:docs": "@docs:hooks",
        "hooks:scan": "php iso-automation/cli.php hooks:scan",
        "ide:sync": "php iso-automation/cli.php sync:ide",
        "validate:rules": "php iso-automation/cli.php validate:rules",
        "version:patch": [
            "php isotone version:bump patch alpha",
            "php isotone changelog"
        ],
        "version:minor": [
            "php isotone version:bump minor alpha",
            "php isotone changelog"
        ],
        "version:major": [
            "php isotone version:bump major alpha",
            "php isotone changelog"
        ],
        "pre-commit": [
            "@check-style"
        ],
        "tailwind:build": "php iso-automation/cli.php tailwind:build",
        "tailwind:watch": "php iso-automation/cli.php tailwind:watch",
        "tailwind:minify": "php iso-automation/cli.php tailwind:minify",
        "tailwind:install": "php iso-automation/cli.php tailwind:install",
        "tailwind:update": "php iso-automation/cli.php tailwind:update",
        "tailwind:status": "php iso-automation/cli.php tailwind:status"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}