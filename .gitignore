# Isotone CMS - Git Ignore File

# Dependencies
/vendor/
/node_modules/

# Environment files
.env
.env.local
.env.*.local

# User content (should not be in version control)
/content/uploads/*
/content/cache/*
/content/backups/*
!/content/uploads/.gitkeep
!/content/cache/.gitkeep
!/content/backups/.gitkeep

# Logs and temporary files
/storage/logs/*
/storage/temp/*
!/storage/logs/.gitkeep
!/storage/temp/.gitkeep

# IDE and editor files
.idea/
.vscode/
.windsurf/
*.sublime-project
*.sublime-workspace
.phpstorm.meta.php
_ide_helper.php

# OS files
.DS_Store
Thumbs.db
desktop.ini

# Testing
/coverage/
.phpunit.result.cache
.phpunit.cache
phpunit.xml

# Build files
/build/
/dist/

# Composer
composer.phar

# NPM debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Plugin and theme development
/plugins/*
!/plugins/index.html
!/plugins/.gitkeep
/themes/*
!/themes/index.html
!/themes/.gitkeep
!/themes/default/