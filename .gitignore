# Isotone CMS - Git Ignore File

# Dependencies
/vendor/
/node_modules/

# Environment files
.env
.env.local
.env.*.local
# Note: database.json contains connection info for IDEs (no passwords)

# Installation marker
.isotone-installed

# User content (should not be in version control)
/iso-content/uploads/*
/iso-content/cache/*
!/iso-content/uploads/.gitkeep
!/iso-content/cache/.gitkeep

# Logs and temporary files
/storage/logs/*
/storage/temp/*
!/storage/logs/.gitkeep
!/storage/temp/.gitkeep

# IDE and editor files
.idea/
.vscode/
.windsurf/
*.sublime-project
*.sublime-workspace
.phpstorm.meta.php
_ide_helper.php

# OS files
.DS_Store
Thumbs.db
desktop.ini

# Testing
/coverage/
.phpunit.result.cache
.phpunit.cache
phpunit.xml

# Build files
/build/
/dist/

# Composer
composer.phar

# NPM debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Plugin and theme development
/iso-content/plugins/*
!/iso-content/plugins/index.html
/iso-content/themes/*
!/iso-content/themes/index.html