# Isotone - Git Ignore File

# Dependencies
/vendor/
/node_modules/

# Configuration files with sensitive data
config.php
config.local.php

# Personal notes (optional - uncomment to ignore)
# NOTES.md
# Note: database.json contains connection info for IDEs (no passwords)

# Installation marker
.isotone-installed

# User content (should not be in version control)
/iso-content/uploads/*
!/iso-content/uploads/.gitkeep

# Runtime/system generated files (always ignored)
/iso-runtime/cache/*
/iso-runtime/logs/*
/iso-runtime/temp/*
!/iso-runtime/cache/.gitkeep
!/iso-runtime/logs/.gitkeep
!/iso-runtime/temp/.gitkeep

# IDE and editor files
.idea/
.vscode/
.windsurf/
*.sublime-project
*.sublime-workspace
.phpstorm.meta.php
_ide_helper.php

# OS files
.DS_Store
Thumbs.db
desktop.ini

# Testing
/coverage/
.phpunit.result.cache
.phpunit.cache
phpunit.xml

# Build files
/build/
/dist/

# Composer
composer.phar

# NPM debug logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Plugin and theme development
# Note: We track all plugins and themes during development
# Users can add their own .gitignore rules for production